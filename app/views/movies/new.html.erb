<h1>New Movie</h1>

   <% form_for(@movie) do |f| %>
     <p>
       <%= f.label :title %><br />
       <%= f.text_field :title %>
     </p>
     <p>
       <%= f.label :year %><br />
       <%= f.text_field :year %>
     </p>
     <p>
       <%= f.submit "Update" %>
     </p>

   <% end %>

   <%= link_to 'Back', movies_path %>
